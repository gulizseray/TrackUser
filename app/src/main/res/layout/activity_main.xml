<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/steps_text" android:id="@+id/steps" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12pt"/>

    <TextView android:text="@string/number_of_steps" android:id="@+id/stepCounter" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@id/steps"
        android:textSize="12pt"/>

    <TextView android:text="@string/distance_text" android:id="@+id/distanceText" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@id/stepCounter"
        android:textSize="12pt"/>

    <TextView android:text="@string/distance_value" android:id="@+id/distanceValue" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@id/distanceText"
        android:textSize="12pt"/>

    <TextView android:text="@string/degrees_text" android:id="@+id/degrees" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@id/distanceValue"
        android:textSize="12pt"/>

    <TextView android:text="@string/total_degrees_of_rotation" android:id="@+id/degreeCounter" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@id/degrees"
        android:textSize="12pt"/>

    <TextView android:text="@string/total_degrees_of_rotation" android:id="@+id/gyroValues" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@id/degreeCounter"
        android:textSize="12pt"/>

    <TextView android:text="@string/degrees_text" android:id="@+id/degreesM" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@id/gyroValues"
        android:textSize="12pt"/>

    <TextView android:text="@string/total_degrees_of_rotation" android:id="@+id/degreeCounterM" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@id/degreesM"
        android:textSize="12pt"/>

    <TextView android:text="total_acc_magneto:" android:id="@+id/acc_magneto" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@id/degreeCounterM"
        android:textSize="12pt"/>

    <TextView android:text="@string/total_degrees_of_rotation" android:id="@+id/acc_magneto_count" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@id/acc_magneto"
        android:textSize="12pt"/>

   <!-- <TextView android:text="@string/audio_text" android:id="@+id/audioLT" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@id/acc_magneto_count"
        android:textSize="12pt"/>

    <TextView android:text="0" android:id="@+id/audio_level" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@id/audioLT"
        android:textSize="12pt"/>-->

    <TextView
        android:id="@+id/error_indicator"
        android:layout_width="fill_parent"
        android:layout_height="80px"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/steps"
        android:layout_toEndOf="@+id/steps"
        android:background="#ff19ff14" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/resetButton"
        android:layout_alignBottom="@+id/distanceText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="resetDegrees"/>
</RelativeLayout>

