<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/steps_text" android:id="@+id/steps" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12pt"/>

    <TextView android:text="@string/number_of_steps" android:id="@+id/stepCounter" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@id/steps"
        android:textSize="12pt"/>

    <TextView android:text="@string/distance_text" android:id="@+id/distanceText" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@id/stepCounter"
        android:textSize="12pt"/>

    <TextView android:text="@string/distance_value" android:id="@+id/distanceValue" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@id/distanceText"
        android:textSize="12pt"/>

    <TextView android:text="@string/current_degrees_text" android:id="@+id/current_degrees" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@id/distanceValue"
        android:textSize="12pt"/>

    <TextView android:text="@string/current_degrees_of_rotation" android:id="@+id/currentDegreeCounter" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@id/current_degrees"
        android:textSize="12pt"/>

    <TextView android:text="@string/current_degrees_of_rotation" android:id="@+id/compassValue" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_degrees"
        android:textSize="12pt"
        android:layout_alignParentRight="true"
         />

    <TextView android:text="@string/degrees_text" android:id="@+id/degrees" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@id/currentDegreeCounter"
        android:textSize="12pt"/>

    <TextView android:text="@string/total_degrees_of_rotation" android:id="@+id/degreeCounter" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@id/degrees"
        android:textSize="12pt"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/resetButton"
        android:onClick="resetDegrees"
        android:layout_below="@id/degreeCounter" />
</RelativeLayout>

